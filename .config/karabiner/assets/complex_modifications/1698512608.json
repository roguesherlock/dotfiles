{
  "title": "Tap left shift to open and right to close parenthesis",
  "rules": [
    {
      "description": "Shift_L tap -> '(', Shift_R tap -> ')'",
      "manipulators": [
        {
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": {
            "key_code": "left_shift"
          },
          "to_if_alone": [
            {
              "key_code": "9",
              "modifiers": [
                "left_shift"
              ]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "right_shift",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": {
            "key_code": "right_shift"
          },
          "to_if_alone": [
            {
              "key_code": "0",
              "modifiers": [
                "left_shift"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
